# Application
NODE_ENV=development
PORT=3000
APP_NAME=My NestJS App
APP_URL=http://localhost:3000
API_PREFIX=api
CORS_ORIGINS=http://localhost:3001,http://localhost:3002

# Admin Database
ADMIN_DB_TYPE=postgres
ADMIN_DB_HOST=localhost
ADMIN_DB_PORT=5432
ADMIN_DB_USERNAME=admin_user
ADMIN_DB_PASSWORD=admin_password
ADMIN_DB_NAME=admin_db

# Tenant Database
TENANT_DB_TYPE=postgres
TENANT_DB_HOST=localhost
TENANT_DB_PORT=5432
TENANT_DB_USERNAME=tenant_user
TENANT_DB_PASSWORD=tenant_password
TENANT_DB_PREFIX=tenant_

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-me-in-production
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Redis / Queue
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Multi-tenant
TENANT_ID_SOURCE=header
TENANT_HEADER=X-Tenant-Id

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=true
EMAIL_USER=user
EMAIL_PASS=pass
EMAIL_FROM="no-reply@example.com"